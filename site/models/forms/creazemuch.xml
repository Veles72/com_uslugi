<?xml version="1.0" encoding="UTF-8"?>
<form name="ceazemuch">
	<fieldset name="step_1">
            <field name="clienttype_id" 
                   type="typecli"
                   label="COM_USLUGI_FORM_LBL_CLIENT_TYPE" 
                   description="COM_USLUGI_FORM_DESC_CLIENT_TYPE"
                   class="inputbox"
                   size="1" 
                   default="1" >
            </field>
            <field
                name="rayon_id"
                type="sql"
                multiple="false"
                class="inputbox"
                size="1"
                label="COM_USLUGI_FORM_LBL_RAYON_ID"
                description="COM_USLUGI_FORM_DESC_RAYON_ID"
                query="select id, name from #__uslugi_rayon"
                key_field="id"
                value_field="name"
                default="1"
            >
            </field>
            <field
                name="rayon_text"
                type="text"
                class="inputbox"
                multiple="false"
                size="20"
                label="COM_USLUGI_FORM_LBL_RAYON_TEXT"
                description="COM_USLUGI_FORM_DESC_RAYON_TEXT"
                default=""
                required="true"
            >
            </field>
            <field
                name="square"
                type="text"
                class="inputbox validate-square"
                multiple="false"
                size="3"
                label="COM_USLUGI_FORM_LBL_SQUARE"
                description="COM_USLUGI_FORM_DESC_SQUARE"
                default=""
                value_field="square"
                required="true"
            >
            </field>
            <field
                name="ex_count"
                type="text"
                class="inputbox validate-ex_count"
                multiple="false"
                size="1"
                label="COM_USLUGI_FORM_LBL_EX_COUNT"
                description="COM_USLUGI_FORM_DESC_EX_COUNT"
                default=""
                required="true"
            >
            </field>
            <field
                name="trust_saved"
                type="radio"
                class="inputbox"
                label="COM_USLUGI_FORM_LBL_EX_TRUST_SAVED"
                description="COM_USLUGI_FORM_DESC_TRUST_SAVED"
                default="1"
            >
                <option value="0">COM_USLUGI_NO</option>
                <option value="1">COM_USLUGI_YES</option>
            </field>
            <field
                name="home_delivery"
                type="radio"
                class="inputbox"
                label="COM_USLUGI_FORM_LBL_HOME_DELIVERY"
                description="COM_USLUGI_FORM_DESC_HOME_DELIVERY"
                default="0"
            >
                <option value="0">COM_USLUGI_NO_BE_REQUIRED</option>
                <option value="1">COM_USLUGI_TES_BE_REQUIRED</option>
            </field>
	</fieldset>
	<fieldset name="step_2">
	</fieldset>
</form>
