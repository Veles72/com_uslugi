	<fields name="request">
		<fieldset name="request" label="COM_USLUGI_FIELDSET_OPTIONAL_LABEL">
                    <field
                        name="alias"
                        type="sql"
                        multiple="false"
                        size="1"
                        label="COM_USLUGI_FORM_LBL_USLUGI_ALIAS"
                        description="COM_USLUGI_FORM_DESC_USLUGI_ALIAS"
                        query="select alias, name from #__uslugi"
                        key_field="alias"
                        value_field="name"
                        default=""
                        required="true"
                    >
                    </field>
		</fieldset>
	</fields>
</metadata>

